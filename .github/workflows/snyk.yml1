name: Snyk test
on: push
jobs:
  security:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@master
    - uses: snyk/actions/setup@master
    - uses: actions/setup-go@v1
      with:
        go-version: "1.13"
    - name: Snyk test
      continue-on-error: true
      run: snyk test --all-projects
      env:
        SNYK_TOKEN: 
    - name: Snyk Monitor
      run: snyk monitor --all-projects
